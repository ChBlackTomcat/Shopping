<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/iv_commodity"
        android:layout_width="60dp"
        android:layout_height="60dp"
         />

    <TextView
        android:textSize="30dp"
        android:text="商品名称"
        android:id="@+id/tv_commodityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iv_commodity"
        android:layout_toEndOf="@+id/iv_commodity"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <TextView
        android:id="@+id/tv_price"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="价格"
        android:layout_below="@+id/tv_commodityname"
        android:layout_alignLeft="@+id/tv_commodityname"
        android:layout_alignStart="@+id/tv_commodityname"
        android:layout_alignRight="@+id/tv_commodityname"
        android:layout_alignEnd="@+id/tv_commodityname" />

</RelativeLayout>
