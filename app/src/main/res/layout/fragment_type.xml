<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RadioGroup
        android:id="@+id/type_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioButton
            android:id="@+id/type_rb_all"
            android:text="全部"
            android:layout_weight="1"
            style="@style/TypeButtonStyle"
             />
        <RadioButton
            android:id="@+id/type_rb_clothes"
            android:text="衣服"
            android:layout_weight="1"
            style="@style/TypeButtonStyle"
             />
        <RadioButton
            android:id="@+id/type_rb_book"
            android:text="书籍"
            android:layout_weight="1"
            style="@style/TypeButtonStyle"
            />
        <RadioButton
            android:id="@+id/type_rb_food"
            android:text="零食"
            android:layout_weight="1"
            style="@style/TypeButtonStyle"
             />
        <RadioButton
            android:id="@+id/type_rb_hot"
            android:text="热卖"
            android:layout_weight="1"
            style="@style/TypeButtonStyle"
             />
    </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/type_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>

</LinearLayout>
