<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Base.Theme.AppCompat.Light"
        android:layout_below="@+id/register_account"
        android:layout_alignLeft="@+id/register_account"
        android:layout_alignStart="@+id/register_account">
        <Button
            android:onClick="back"
            android:id="@+id/register_bt_back"
            android:background="@drawable/goback"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:text="密码修改"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/revisionpassword_tv1"
        android:textSize="20dp"
        android:text="密码:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/revisionpassword_ed1"
        android:layout_toRightOf="@+id/revisionpassword_tv1"
        android:background="@drawable/edit_bg"
        android:layout_width="300dp"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/revisionpassword_tv2"
            android:textSize="20dp"
            android:text="确认密码:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/revisionpassword_ed2"
            android:layout_toRightOf="@+id/revisionpassword_tv2"
            android:background="@drawable/edit_bg"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <Button
        android:text="确认"
        android:textSize="30dp"
        android:id="@+id/revisionpassword_yes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
